//Function prototypes

void stats();
void feepayment(int );

//Class that contains student's record

class student {

public:
    string name;
    string fname;
    string mname;
    string date;
    string telno;
    int sclass;
    char div;
    int rno;
    float marks[5];
    string sec_code;
    int attct;
    float per;
    char grade;

    //DESTRUCTOR

    ~student()
    {

    }
};

//This class has all the functions that we need

class functions : public student{

public:

    //FUNCTION TO GENERATE ID CARD

    void id(){
        ofstream file;
        file.open("print1.txt");
        file<<endl<<endl;
        for(int i=0; i<80; i++)
        {
            file<<"-";
        }
        file<<endl<<"\n\t\t\t  THE INDIAN NATIONAL SCHOOL\n\n";

        for(int i=0; i<80; i++)
        {
            file<<"-";
        }
        file<<endl<<"\n\t\t\t\t   STUDENT ID CARD\n";
        for(int i=0; i<27; i++)
        {
            file<<"-+-";
        }
        file<<endl<<"\n\t\t\t\t   PERSONAL DETAILS\n";
        for(int i=0; i<27; i++)
        {
            file<<"-+-";
        }

        file<<"\nNAME: "<<name<<"\t\t";
        file<<"CLASS: "<<sclass<<"\t";
        file<<"DIV: "<<div<<"\t\t";
        file<<"ROLL NO: "<<rno<<"\n\n";
       file<<"FATHERS NAME: Mr.  "<<fname<<"\t\t\t";
        file<<"MOTHERS NAME: Mrs.  "<<mname<<"\n\n";
        file<<"DATE OF BIRTH: "<<date<<"\t\t\t";
        file<<"TELEPHONE: "<<telno<<"\n\n";

        file<<endl<<endl;

        for(int i=0; i<27; i++)
        {
            file<<"-+-";
        }
        file.close();
       system("notepad /p print1.txt");
    }


    //FUNCTION TO GET PERCENTAGE

    void getper()
    {
        per=(marks[0]+marks[1]+marks[2]+marks[3]+marks[4])/5;

    }

    //FUNCTION TO GET GRADE

    void getgrade()
    {
        if(per>=80)
            grade='A';
        else if((per>=60)&&(per<=79))
            grade='B';
        else if((per>=40)&&(per<=59))
            grade='C';
        else if((per>=35)&&(per<=39))
            grade='D';
        else if(per<35)
            grade='E';

    }

    //FUNCTION TO GET INPUT FROM USER


    void enter()
    {

        for(int i=0; i<40; i++)
        {
            cout<<"-+-";
        }
        cout<<"\n\t\t\t\t\t   ENTER THE STUDENT DETAILS"<<endl<<endl;
        for(int i=0; i<40; i++)
        {
            cout<<"-+-";
        }
        cout<<"\n\t\tNAME OF THE STUDENT    : ";
        cin>>name;
        cout<<"\t\tFATHER'S NAME          : ";
        cin>>fname;
        cout<<"\t\tMOTHER'S NAME          : ";
        cin>>mname;
        cout<<"\t\tDATE OF BIRTH(DD/MM/YY): ";
        cin>>date;
        cout<<"\t\tTELEPHONE NUMBER       : ";
        cin>>telno;
        cout<<"\t\tSECURITY CODE          : ";
        cin>>sec_code;
        cout<<"\t\tCLASS                  : ";
        cin>>sclass;
        cout<<"\t\tDIVISION               : ";
        cin>>div;
        cout<<"\t\tROLL NUMBER            : ";
        cin>>rno;
        cout<<"\t\tDAYS PRESENT           : ";
        cin>>attct;

        cout<<endl<<endl;
        for(int i=0; i<40; i++)
        {
            cout<<"+-+";
        }
        cout<<"\n\t\t\t\t\t   ENTER THE SUBJECT MARKS"<<endl;
        for(int i=0; i<40; i++)
        {
            cout<<"+-+";
        }
        cout<<"\n\t\t\t       PHYSICS    : ";
        cin>>marks[0];
        cout<<"\t\t\t       CHEMISTRY  : ";
        cin>>marks[1];
        cout<<"\t\t\t       MATHEMATICS: ";
        cin>>marks[2];
        cout<<"\t\t\t       COMPUTER   : ";
        cin>>marks[3];
        cout<<"\t\t\t       ENGLISH    : ";
        cin>>marks[4];
    }

    //FUNCTION TO DISPLAY ALL THE ATTRIBUTES

    void display()
    {
        cout<<endl;
        cout<<endl<<"1.NAME";
        cout<<endl<<"2.FATHER'S NAME";
        cout<<endl<<"3.MOTHER'S NAME";
        cout<<endl<<"4.DATE OF BIRTH";
        cout<<endl<<"5.TELEPHONE NUMBER";
        cout<<endl<<"6.SECURITY CODE";
        cout<<endl<<"7.CLASS";
        cout<<endl<<"8.DIVISION";
        cout<<endl<<"9.ROLL NO.";
        cout<<endl<<"10.ATTENDANCE";
    }

    //FUNCTION TO DISPLAY REPORT CARD OF STUDENT

    void display_report()
    {

        cout<<endl<<endl;
        for(int i=0; i<40; i++)
        {
            cout<<"-";
        }
        cout<<endl<<"\t\t\t\t\t   THE INDIAN NATIONAL SCHOOL\n\n";

