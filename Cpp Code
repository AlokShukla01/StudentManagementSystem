//FUNCTION TO DISPLAY CLASS STATISTICS

void stats()
{

    cout<<endl<<endl<<endl;
    cout<<"\t\t\t\t\t     STATISTICS";
    for(int i=0; i<5; i++)
    {
        int count=0;
        float avgmarks=0;
        for(int z=0; z<10; z++)
        {

            if(obj1[z].marks[i]!=0)
            {
                avgmarks+=obj1[z].marks[i];
                count++;
            }


        }

        cout<<endl<<endl<<"AVERAGE MARKS OF SUBJECT "<<i+1<<" =";
        cout<<avgmarks/count;


    }

    cout<<endl<<endl<<endl;
    cout<<"ABBRIVATIONS USED: ";
    cout<<endl<<"1=PHYSICS\n2=CHEMISTRY\n3=MATHEMATICS\n4=COMPUTER\n5=ENGLISH";

}

//FUNCTION FOR PAYMENT PORTAL TO ACCEPT ACADEMIC FEES

void feepayment(int cost)
{
    int z,otp,pin;
    string expiry,crdholder,upi,cardno,cvv;

    for(int i=0; i<40; i++)
    {
        cout<<"-+-";
    }
    cout<<"\t\t\t\t\t    WELCOME TO OUR PAYMENT GATEWAY"<<endl;

    for(int i=0; i<40; i++)
    {
        cout<<"-+-";
    }

    cout<<"\t\t\t\t\t    TOTAL ACADEMIC FEES= Rs. "<<cost<<endl;
z1:

    cout<<endl<<endl<<"\t\t HOW WOULD YOU LIKE TO PAY?";
    cout<<endl<<"\t\t 1.CARD";
    cout<<endl<<"\t\t 2.UPI";

    cout<<endl<<endl<<"\tPLEASE SELECT YOUR OPTION: ";
    cin>>z;

    switch(z)
    {
    case 1:
    {
a9:
        cout<<endl<<endl<<"\tYOU HAVE CHOOSEN PAYMENT BY CARD METHOD. ";
        cout<<endl<<endl<<"\tPLEASE ENTER YOUR CARD DETAILS:- ";
        cout<<endl<<endl<<"\t\tCARD NUMBER: ";
 try{
        cin>>cardno;
        if(cardno.size()!=16)
        {

            if((cardno[0]>='a'&&cardno[0]<='z')||(cardno[0]>='A'&&cardno[0]<='Z'))
            {
                 throw 10;
            }

        }
   }
        catch(int z9)
        {
            cout<<endl<<"INVALID INPUT,INPUT SHOULD BE 16 INTEGER VALUES ONLY ";
            goto a9;
        }


    try{

        cout<<endl<<endl<<"\t\tCVV: ";
        cin>>cvv;

         if(cvv.size()!=3)
        {

            if((cvv[0]>='a'&&cvv[0]<='z')||(cvv[0]>='A'&&cvv[0]<='Z'))
            {
                 throw 4.1;
            }

        }
       }
       catch(double z10)
        {
            cout<<endl<<"INVALID INPUT,CVV SHOULD BE OF 3 INTEGER VALUES ONLY ";
            goto a9;
        }


        cout<<endl<<endl<<"\t\tEXPIRY DATE: ";
        cin>>expiry;
        cout<<endl<<endl<<"\t\tCARD HOLDER NAME: ";
        cin>>crdholder;

        for(int i=0; i<40; i++)
        {
            cout<<"-+-";
        }
        cout<<"\t\t\t\t\t       PAYMENT SUCCESSFULL"<<endl;

        for(int i=0; i<40; i++)
        {
            cout<<"-+-";
        }

        break;

    }

    case 2:
    {
        cout<<endl<<endl<<"\tYOU HAVE CHOOSEN PAYMENT BY UPI METHOD. ";
        cout<<endl<<endl<<"\tPLEASE ENTER YOUR UPI ID: ";
        cin>>upi;
        cout<<endl<<endl<<"\tPLEASE ENTER YOUR UPI PIN: ";
        cin>>pin;
        for(int i=0; i<40; i++)
        {
            cout<<"-+-";
        }
        cout<<"\t\t\t\t\t       PAYMENT SUCCESSFULL"<<endl;

        for(int i=0; i<40; i++)
        {
            cout<<"-+-";
        }

        break;
    }
    default:
    {
        cout<<endl<<endl<<"\t\tINVALID INPUT\n\t\tINPUT SHOULD BE BETWEEN 1-2 ONLY";
        goto z1;
    }
    }

}
